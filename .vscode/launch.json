{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: current file",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "type": "pwa-msedge",
            "request": "launch",
            "name": "Launch my cool app",
            "url": "http://localhost:3000"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome For localhost",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}",
            "runtimeArgs": [
                "--auto-open-devtools-for-tabs",
                "--disable-web-security"
            ]
        }
    ]
}